<?xml version="1.0" encoding="UTF-8" ?>

<launch>
    <arg name="device" default="cuda" doc="Device to run tensor operations on: cpu or cuda"/>
    <arg name="input_img_topic" default="robot_data/rgb/compressed"/>
    <arg name="data_sequence" default="00000" doc="Sequence name from Rellis-3D dataset"/>
    <arg name="rviz" default="true"/>
    <arg name="model" default="hrnet" doc="Currently supported options: ['hrnet', 'smp']"/>
    <arg name="model_weights" default="PSPNet_resnext50_32x4d_704x960_lr0.0001_bs6_epoch18_Rellis3D_iou_0.73.pth"
         doc="SMP model weights (file name stored in 'config/weights/smp/' folder)"/>

    <include file="$(dirname)/robot_data.launch">
        <arg name="data_sequence" value="$(arg data_sequence)"/>
    </include>

    <node name="$(arg model)_inference" pkg="traversability_estimation" type="$(arg model)_inference" output="screen">
        <rosparam subst_value="true">
            model_weights: $(arg model_weights)
            device: $(arg device)
            num_cameras: 1
            image_transport: 'compressed'
            legend: true
            max_age: 1.0
            input_scale: 0.5
            traversability_labels: false
        </rosparam>
        <remap from="input_0/image" to="/robot_data/rgb"/>
        <remap from="input_0/image/compressed" to="/robot_data/rgb/compressed"/>
        <remap from="input_0/camera_info" to="/robot_data/camera_info"/>

        <remap from="output_0/semseg" to="/$(arg model)_inference/semantic_segmentation"/>
        <remap from="output_0/semseg/compressed" to="/$(arg model)_inference/semantic_segmentation/compressed"/>
        <remap from="output_0/camera_info" to="/$(arg model)_inference/camera_info"/>
    </node>

    <!-- RVIZ -->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz"
          args="-d $(find traversability_estimation)/config/rviz/robot_data.rviz"/>

</launch>
